# This block redirects all HTTP traffic to HTTPS.
server {
    listen 80;
    listen [::]:80;
    server_name dev.cis.com.mm;
    return 301 https://$host$request_uri;
}

# This is the main server block for HTTPS traffic.
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name dev.cis.com.mm;

    root /home/ubuntu/projects/CN_LMS_Web_Dev/build/web;
    index index.html index.htm;
    charset utf-8;

    gzip on;
    gzip_disable "msie6";
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 5;
    gzip_buffers 16 8k;
    gzip_http_version 1.1;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    # Handle static files for the Flutter app.
    location / {
        try_files $uri $uri/ /index.html;
    }

    # All API and static image requests must be proxied to the new API server.
    location /api/ {
        proxy_pass https://lms.cis.com.mm/api/;
        proxy_set_header Host lms.cis.com.mm;
        proxy_ssl_verify off;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Ssl on;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
    }

    # This block proxies requests for all files in the 'uploads' directory.
    location /uploads/ {
        proxy_pass https://lms.cis.com.mm/uploads/;
        proxy_set_header Host lms.cis.com.mm;
        proxy_ssl_verify off;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Ssl on;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        add_header Cache-Control "no-store, no-cache, must-revalidate, max-age=0";
    }

    # This block proxies requests for all files in the 'storage' directory.
    location /storage/ {
        proxy_pass https://lms.cis.com.mm/storage/;
        proxy_set_header Host lms.cis.com.mm;
        proxy_ssl_verify off;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Ssl on;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        add_header Cache-Control "no-store, no-cache, must-revalidate, max-age=0";
    }

    ssl_certificate /etc/letsencrypt/live/dev.cis.com.mm/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/dev.cis.com.mm/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_stapling off;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    access_log /var/log/nginx/dev.cis.com.mm_web_access.log;
    error_log /var/log/nginx/dev.cis.com.mm_web_error.log;
}
